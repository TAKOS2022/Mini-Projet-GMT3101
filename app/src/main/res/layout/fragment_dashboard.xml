<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardFragment">

    <Button
        android:id="@+id/camera_button_dashboard"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:paddingTop="24dp"
        android:text="Pictures"
        android:textSize="24sp"
        app:cornerRadius="0dp"
        app:icon="@drawable/baseline_photo_camera_24"
        app:iconGravity="top"
        app:iconPadding="-32dp"
        app:iconSize="64dp"
        app:layout_constraintEnd_toStartOf="@+id/view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/steps_button_dashboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Steps"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/text_dashboard"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.364" />

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/camera_button_dashboard"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/camera_button_dashboard"/>


</androidx.constraintlayout.widget.ConstraintLayout>