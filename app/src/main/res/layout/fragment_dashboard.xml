<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardFragment">

    <Button
        android:id="@+id/camera_button_dashboard"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:paddingTop="24dp"
        android:text="Pictures"
        android:textSize="24sp"
        app:cornerRadius="0dp"
        app:icon="@drawable/baseline_photo_camera_24"
        app:iconGravity="top"
        app:iconPadding="-32dp"
        app:iconSize="64dp"
        app:layout_constraintEnd_toStartOf="@+id/steps_button_dashboard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/steps_button_dashboard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="-100dp"
        android:backgroundTint="@color/yellow"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:paddingTop="24dp"
        android:text="Get Steps"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:cornerRadius="0dp"
        app:icon="@drawable/baseline_directions_walk_24"
        app:iconGravity="top"
        app:iconPadding="-32dp"
        app:iconSize="128dp"
        app:iconTint="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/camera_button_dashboard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/camera_button_dashboard"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>